<%- include('../partials/header') %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/courses">Courses</a></li>
                        <li class="breadcrumb-item"><a href="/courses/<%= course[0].course_id %>">
                                <%= course[0].course_name %>
                            </a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>

                <!-- Page Header -->
                <div class="mb-4">
                    <h1 class="display-5 fw-bold">
                        <i class="bi bi-pencil text-warning me-2"></i>Edit Course
                    </h1>
                    <p class="lead text-muted">Update course information</p>
                </div>

                <!-- Edit Course Form -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <form action="/courses/<%= course[0].course_id %>" method="post">
                            <div class="mb-3">
                                <label for="course_id" class="form-label fw-semibold">
                                    <i class="bi bi-hash me-1"></i>Course ID
                                </label>
                                <input type="text" class="form-control bg-light" name="course_id" id="course_id"
                                    value="<%= course[0].course_id %>" readonly>
                                <div class="form-text">Course ID cannot be changed</div>
                            </div>

                            <div class="mb-3">
                                <label for="course_name" class="form-label fw-semibold">
                                    <i class="bi bi-book me-1"></i>Course Name
                                </label>
                                <input type="text" class="form-control" name="course_name" id="course_name"
                                    value="<%= course[0].course_name %>" required>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="credits" class="form-label fw-semibold">
                                        <i class="bi bi-award me-1"></i>Credits
                                    </label>
                                    <input type="number" class="form-control" name="credits" id="credits"
                                        value="<%= course[0].credits %>" min="1" max="10" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="branch" class="form-label fw-semibold">
                                        <i class="bi bi-diagram-3 me-1"></i>Branch
                                    </label>
                                    <input type="text" class="form-control" name="branch" id="branch"
                                        value="<%= course[0].branch %>" required>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Note:</strong> Professor assignment cannot be changed through this form.
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="/courses/<%= course[0].course_id %>" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-circle me-2"></i>Update Course
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>