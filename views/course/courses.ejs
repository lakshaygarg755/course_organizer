<%- include('../partials/header') %>

    <div class="container my-5">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold">
                    <i class="bi bi-book me-2 text-primary"></i>All Courses
                </h1>
                <p class="lead text-muted">Browse and manage your courses</p>
            </div>
            <div class="col-md-4 text-md-end">
                <% if (user && user.role==='admin' ) { %>
                    <a href="/courses/add" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add New Course
                    </a>
                    <% } %>
            </div>
        </div>

        <!-- Success Message -->
        <% if (flag===1) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                <strong>Success!</strong> Course added successfully.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <!-- Courses Grid -->
                <div class="row g-4">
                    <% if (courses.length===0) { %>
                        <div class="col-12">
                            <div class="alert alert-info text-center py-5">
                                <i class="bi bi-info-circle display-4 mb-3"></i>
                                <h4>No courses available</h4>
                                <p class="mb-0">Check back later for new courses.</p>
                            </div>
                        </div>
                        <% } else { %>
                            <% courses.forEach(course=> { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-0 hover-shadow">
                                        <div class="card-header bg-primary text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="bi bi-book-half me-2"></i>
                                                <%= course.course_name %>
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <span class="badge bg-secondary me-2">
                                                    <i class="bi bi-hash"></i>
                                                    <%= course.course_id %>
                                                </span>
                                                <span class="badge bg-info">
                                                    <i class="bi bi-award"></i>
                                                    <%= course.credits %> Credits
                                                </span>
                                            </div>
                                            <p class="card-text">
                                                <i class="bi bi-diagram-3 me-2 text-muted"></i>
                                                <strong>Branch:</strong>
                                                <%= course.branch %>
                                            </p>
                                            <p class="card-text">
                                                <i class="bi bi-person-badge me-2 text-muted"></i>
                                                <strong>Professor:</strong>
                                                <%= course.professor_name %>
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent border-0 p-3">
                                            <div class="d-grid gap-2">
                                                <a href="/courses/<%= course.course_id %>"
                                                    class="btn btn-outline-primary">
                                                    <i class="bi bi-eye me-2"></i>View Details
                                                </a>
                                                <% if (user && user.role==='admin' ) { %>
                                                    <div class="btn-group" role="group">
                                                        <a href="/courses/<%= course.course_id %>/edit"
                                                            class="btn btn-outline-warning btn-sm">
                                                            <i class="bi bi-pencil me-1"></i>Edit
                                                        </a>
                                                        <a href="/courses/<%= course.course_id %>/delete"
                                                            class="btn btn-outline-danger btn-sm"
                                                            onclick="return confirm('Are you sure you want to delete this course?')">
                                                            <i class="bi bi-trash me-1"></i>Delete
                                                        </a>
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } %>
                </div>
    </div>

    <!-- Add hover effect style -->
    <style>
        .hover-shadow {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
        }
    </style>

    <%- include('../partials/footer') %>