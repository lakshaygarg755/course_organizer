<%- include('../partials/header') %>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/courses">Courses</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Course</li>
                    </ol>
                </nav>

                <!-- Page Header -->
                <div class="mb-4">
                    <h1 class="display-5 fw-bold">
                        <i class="bi bi-plus-circle text-primary me-2"></i>Add New Course
                    </h1>
                    <p class="lead text-muted">Fill in the details to create a new course</p>
                </div>

                <!-- Add Course Form -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <form action="/courses" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="course_id" class="form-label fw-semibold">
                                        <i class="bi bi-hash me-1"></i>Course ID
                                    </label>
                                    <input type="text" class="form-control" id="course_id" name="course_id"
                                        placeholder="e.g., CS101" required>
                                    <div class="form-text">Unique identifier for the course</div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="credits" class="form-label fw-semibold">
                                        <i class="bi bi-award me-1"></i>Credits
                                    </label>
                                    <input type="number" class="form-control" id="credits" name="credits"
                                        placeholder="e.g., 3" min="1" max="10" required>
                                    <div class="form-text">Number of credit hours</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="course_name" class="form-label fw-semibold">
                                    <i class="bi bi-book me-1"></i>Course Name
                                </label>
                                <input type="text" class="form-control" id="course_name" name="course_name"
                                    placeholder="e.g., Introduction to Computer Science" required>
                            </div>

                            <div class="mb-3">
                                <label for="branch" class="form-label fw-semibold">
                                    <i class="bi bi-diagram-3 me-1"></i>Branch
                                </label>
                                <input type="text" class="form-control" id="branch" name="branch"
                                    placeholder="e.g., Computer Science" required>
                            </div>

                            <div class="mb-4">
                                <label for="professorEmail" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-1"></i>Select Professor
                                </label>
                                <select class="form-select" id="professorEmail" name="professorEmail" required>
                                    <option value="" selected disabled>Choose a professor...</option>
                                    <% if (professors && professors.length> 0) { %>
                                        <% professors.forEach(professor=> { %>
                                            <option value="<%= professor.email %>">
                                                <%= professor.name %> (<%= professor.email %>)
                                            </option>
                                            <% }); %>
                                                <% } else { %>
                                                    <option disabled>No professors available</option>
                                                    <% } %>
                                </select>
                                <% if (!professors || professors.length===0) { %>
                                    <div class="alert alert-warning mt-2 mb-0">
                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                        No professors found. Please add professors first.
                                    </div>
                                    <% } %>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="/courses" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle me-2"></i>Add Course
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>