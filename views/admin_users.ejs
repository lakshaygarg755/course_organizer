<%- include('./partials/header') %>

    <div class="container my-5">
        <!-- Page Header -->
        <div class="mb-4">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-shield-lock text-danger me-2"></i>Manage Users
            </h1>
            <p class="lead text-muted">View and manage user roles</p>
        </div>

        <!-- Users Table -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white py-3">
                <h4 class="mb-0">
                    <i class="bi bi-people me-2"></i>All Users
                </h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">
                                    <i class="bi bi-person me-2"></i>Username
                                </th>
                                <th>
                                    <i class="bi bi-shield me-2"></i>Role
                                </th>
                                <th class="text-center">
                                    <i class="bi bi-gear me-2"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users && users.length> 0) { %>
                                <% users.forEach(user=> { %>
                                    <tr>
                                        <td class="px-4 align-middle">
                                            <strong>
                                                <%= user.username %>
                                            </strong>
                                        </td>
                                        <td class="align-middle">
                                            <% if (user.role==='admin' ) { %>
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-shield-fill-check me-1"></i>Admin
                                                </span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-person-fill me-1"></i>User
                                                    </span>
                                                    <% } %>
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="d-flex justify-content-center gap-2">
                                                <% if (user.role==="user" ) { %>
                                                    <form action="/admin/make-admin/<%= user._id %>" method="POST">
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-arrow-up-circle me-1"></i>Make Admin
                                                        </button>
                                                    </form>
                                                    <% } %>
                                                        <% if (user.role==="admin" && users.filter(u=> u.role ===
                                                            "admin").length > 1) { %>
                                                            <form action="/admin/delete-admin/<%= user._id %>"
                                                                method="POST">
                                                                <button type="submit" class="btn btn-sm btn-danger"
                                                                    onclick="return confirm('Remove admin privileges from <%= user.username %>?')">
                                                                    <i class="bi bi-arrow-down-circle me-1"></i>Remove
                                                                    Admin
                                                                </button>
                                                            </form>
                                                            <% } %>
                                                                <% if (user.role==="admin" && users.filter(u=> u.role
                                                                    === "admin").length === 1) { %>
                                                                    <span class="badge bg-warning text-dark">
                                                                        <i class="bi bi-lock me-1"></i>Last Admin
                                                                    </span>
                                                                    <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="3" class="text-center py-4">
                                                    <i class="bi bi-inbox display-4 text-muted"></i>
                                                    <p class="text-muted mb-0 mt-2">No users found</p>
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Total Users: <strong>
                                <%= users ? users.length : 0 %>
                            </strong>
                        </small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small class="text-muted">
                            <i class="bi bi-shield-fill-check me-1"></i>
                            Admins: <strong>
                                <%= users ? users.filter(u=> u.role === 'admin').length : 0 %>
                            </strong>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>